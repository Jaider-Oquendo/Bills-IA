<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="12dp"
    android:background="@android:color/white"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título del artículo -->
        <TextView
            android:id="@+id/textTitulo"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del artículo" />

        <!-- Resumen del artículo -->
        <TextView
            android:id="@+id/textResumen"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumen del contenido del artículo." />

        <!-- Checkbox para marcar como leído -->
        <CheckBox
            android:id="@+id/checkboxLeido"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marcar como leído"
            android:textColor="#3F51B5"
            android:minHeight="48dp"
            android:minWidth="48dp" />

        <!-- Botón para ver más -->
        <Button
            android:id="@+id/buttonVer"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leer más"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#3F51B5"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:elevation="2dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
