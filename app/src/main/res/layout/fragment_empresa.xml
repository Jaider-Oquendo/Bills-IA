<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F4F6F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp">

        <!-- T铆tulo -->
        <TextView
            android:id="@+id/tvFormularioEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formulario Empresa"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="24dp"
            android:textAlignment="center" />

        <!-- Campos en orden correcto -->

        <EditText
            android:id="@+id/etRazonSocial"
            style="@style/EditTextEstilo"
            android:hint="Nombre / Raz贸n Social"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etNit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NIT"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etSector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Actividad econ贸mica (nombre)"
            android:inputType="text"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etVentas"
            style="@style/EditTextEstilo"
            android:hint="Ventas"
            android:inputType="numberDecimal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etUtilidadOperacional"
            style="@style/EditTextEstilo"
            android:hint="Utilidad Operacional"
            android:inputType="numberDecimal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etDepreciaciones"
            style="@style/EditTextEstilo"
            android:hint="Depreciaciones"
            android:inputType="numberDecimal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etInventarios"
            style="@style/EditTextEstilo"
            android:hint="Inventarios"
            android:inputType="numberDecimal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etCuentasPorCobrar"
            style="@style/EditTextEstilo"
            android:hint="Cuentas por Cobrar"
            android:inputType="numberDecimal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo Proveedores reubicado l贸gicamente -->
        <EditText
            android:id="@+id/etProveedores"
            style="@style/EditTextEstilo"
            android:hint="Proveedores"
            android:inputType="numberDecimal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etDeudaFinanciera"
            style="@style/EditTextEstilo"
            android:hint="Deuda Financiera"
            android:inputType="numberDecimal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etIntereses"
            style="@style/EditTextEstilo"
            android:hint="Intereses"
            android:inputType="numberDecimal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etDividendos"
            style="@style/EditTextEstilo"
            android:hint="Dividendos"
            android:inputType="numberDecimal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo adicional: Tasa de Impuesto -->
        <EditText
            android:id="@+id/etTasaImpuestos"
            style="@style/EditTextEstilo"
            android:hint="Tasa de impuestos (%)"
            android:inputType="numberDecimal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etImpuestos"
            style="@style/EditTextEstilo"
            android:hint="Impuestos"
            android:inputType="numberDecimal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"
            android:enabled="false"/>

        <!-- Botones -->


        <Button
            android:id="@+id/btnGuardarEmpresa"
            style="@style/BotonPrimario"
            android:text=" Guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />


        <Button
            android:id="@+id/btnCargarEmpresa"
            style="@style/BotonSecundario"
            android:text=" Cargar datos por NIT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/btn_rounded_blue"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnLimpiarCampos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limpiar Campos"
            android:padding="16dp"
            android:background="@drawable/btn_rounded_red"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnRegresarSeleccion"
            style="@style/BotonSecundario"
            android:text=" Regresar a la Selecci贸n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/btn_rounded_red"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
